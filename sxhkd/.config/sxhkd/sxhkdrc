super + shift + F4
    ~/.local/bin/dm-sysact

super + shift + c
    ~/.local/bin/dm-cmus

super + o
    ~/.local/bin/dm-search

super + g
    ~/.local/bin/dm-handler

super + b
    ~/.local/bin/dm-bookmarks

control + alt + v
    copyq menu

super + shift + u
    picom-trans -c -10

super + shift + i
    picom-trans -c +10

### CMUS remote controls

hyper + minus 
    ~/.local/bin/cmus-volume down
    # cmus-remote -v -5% && pkill -RTMIN+11 dwmblocks

hyper + equal
    ~/.local/bin/cmus-volume up
    # cmus-remote -v +5% && pkill -RTMIN+11 dwmblocks

hyper + r
    cmus-remote -r && pkill -RTMIN+11 dwmblocks   # prev

hyper + n
    cmus-remote -n && pkill -RTMIN+11 dwmblocks   # next

hyper + u
    cmus-remote -u && pkill -RTMIN+11 dwmblocks   # toggle play / pause

hyper + s
    cmus-remote -s && pkill -RTMIN+11 dwmblocks   # stop

hyper + x
    cmus-remote -c -q && pkill -RTMIN+11 dwmblocks   # clear queue

### MPV player controls

XF86AudioLowerVolume 
    playerctl --player=mpv volume 0.2-

XF86AudioRaiseVolume 
    playerctl --player=mpv volume 0.2+

XF86AudioPrev 
    playerctl --player=mpv previous

XF86AudioNext 
    playerctl --player=mpv next

XF86AudioPlay 
    playerctl --player=mpv play-pause

XF86AudioPause 
    playerctl --player=mpv play-pause

XF86AudioStop 
    playerctl --player=mpv stop
