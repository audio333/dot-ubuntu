#super + Return
#    alacritty 

super + p
    rofi -show drun

super + shift + q
    kill $(pidof mpv)

super + shift + p
    ~/.local/bin/pauseallmpv

super + shift + F4
    ~/.local/bin/dm-sysact

super + shift + c
    ~/.local/bin/dm-cmus

super + o
    ~/.local/bin/dm-search

super + g
    ~/.local/bin/dm-handler

super + b
    ~/.local/bin/dm-bookmarks

control + alt + v
    copyq menu

# CMUS remote controls
hyper + x
    cmus-remote -c -q  # clear queue

hyper + p
    cmus-remote -p  # play

hyper + u
    cmus-remote -u  # toggle play / pause

hyper + s
    cmus-remote -s  # stop

hyper + n
    cmus-remote -n  # next

hyper + r
    cmus-remote -r  # prev

hyper + equal
    cmus-remote -v +5%

hyper + minus 
    cmus-remote -v -5%

# Media player controls
XF86AudioPlay 
    cmus-remote -u

# XF86AudioPause 
#     cmus-remote -u 

XF86AudioNext 
    cmus-remote -n 

XF86AudioPrev 
    cmus-remote -r 

XF86AudioRaiseVolume 
    cmus-remote -v +5%

XF86AudioLowerVolume 
    cmus-remote -v -5%

XF86AudioStop 
    cmus-remote -s 

# XF86AudioMute 
