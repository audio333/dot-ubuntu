#!/usr/bin/env sh

# select a song using dmenu
SELECTED="$(find ~/music/* -name '*.m4a' | cut -d'/' -f5- | dmenu -i -l 30 -p "CMUS Change Song > ")"

# exit script if no song is selected (e.g hit ESC)
if [ "$SELECTED" = "" ]; then exit; fi

# clear cmus queue list, add selected song to queue, play queued song & update dwmblocks module
cmus-remote -c -q && cmus-remote -q "music/$SELECTED" && cmus-remote -n -p && pkill -RTMIN+11 dwmblocks 
