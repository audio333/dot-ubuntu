#!/usr/bin/bash

dir="$HOME/music"

queue () {
  find $dir -mindepth 1 -printf '%P\n' | fzf -m --layout reverse | while read -r song; do
    cmus-remote -q "$dir/$song" 
  done
}

selected () {
  case $1 in
    -c) cmus-remote -c -q && queue ;; # clear queue list & add new queues;
    *) queue ;;
  esac
}

selected $1
